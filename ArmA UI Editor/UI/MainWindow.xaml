    <DockPanel>
        <Menu DockPanel.Dock="Top" Style="{StaticResource MenuStyle}">
            <MenuItem Header="_File">
                <MenuItem Header="_Open"/>
                <MenuItem Header="_Save"/>
                <Separator/>
                <MenuItem Header="SubMenuTest">
                    <MenuItem Header="Entry"/>
                    <MenuItem Header="Entry"/>
                    <MenuItem Header="Entry"/>
                    <Separator/>
                    <MenuItem Header="Entry"/>
                    <MenuItem Header="Entry"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Settings">
                <MenuItem Header="_DisplayAddInBrowser" Click="MenuItem_Click"/>
                <x:Code>
                    <![CDATA[
                            private void MenuItem_Click(object sender, RoutedEventArgs e)
                            {
                                var tmp = new AddInBrowser();
                                tmp.Show();
                            }
                            ]]>
                </x:Code>
            </MenuItem>
        </Menu>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Margin="3" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" MinWidth="128"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="2*" MinWidth="256"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="1*" MinWidth="128"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <TabControl Style="{StaticResource TabControlStyle}">
                        <TabItem Header="ToolBox">
                            <ListBox x:Name="ToolBox" Initialized="ToolBox_Initialized" Style="{StaticResource ListBoxStyle}" MouseMove="ToolBox_MouseMove" MouseLeftButtonDown="ToolBox_MouseLeftButtonDown">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" MouseLeftButtonDown="ToolBox_MouseLeftButtonDown">
                                            <Image Margin="0, 0, 3, 0" Source="{Binding Image}" MouseLeftButtonDown="ToolBox_MouseLeftButtonDown"/>
                                            <TextBlock Text="{Binding DisplayName}" MouseLeftButtonDown="ToolBox_MouseLeftButtonDown"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </TabItem>
                        <TabItem Header="ZIndex">
                            <TextBlock Text="ZIndex"/>
                        </TabItem>
                        <TabItem Header="Output">
                            <Frame x:Name="OutputWindowFrame"/>
                        </TabItem>
                    </TabControl>
                </Grid>
                <GridSplitter Style="{StaticResource GridSplitterStyle}" Grid.Column="1"/>
                <Grid Grid.Column="2">
                    <TabControl x:Name="TabControlMainView" Style="{StaticResource TabControlStyle}">
                        <!--<TabItem Header="Display">
                            <ScrollViewer Height="Auto" Width="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                <Canvas x:Name="ConfigRenderCanvas" AllowDrop="True" DragEnter="ConfigRenderCanvas_DragEnter" Drop="ConfigRenderCanvas_Drop" Width="1980" Height="1080" >
                                    <Canvas.LayoutTransform>
                                        <ScaleTransform ScaleX="0.5" ScaleY="0.5"/>
                                    </Canvas.LayoutTransform>
                                    <Canvas.Background>
                                        <VisualBrush TileMode="Tile" Viewport="0, 0, 10, 10" ViewportUnits="Absolute" Viewbox="0,0,10,10" ViewboxUnits="Absolute">
                                            <VisualBrush.Visual>
                                                <Path Data="M 5 0 L 5 10 M 0 5 L 10 5" Stroke="white"  Opacity="0.25"/>
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Canvas.Background>
                                </Canvas>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem Header="Config">
                            <TextBox x:Name="ConfigTextbox" Background="{StaticResource SCB_UIBackgroundDark}" Foreground="{StaticResource SCB_DefaultTextColor}" BorderBrush="Transparent" BorderThickness="0" TextChanged="ConfigTextbox_TextChanged" AcceptsReturn="True" AcceptsTab="True"/>
                        </TabItem>-->
                        <TabItem Header="DevFrame">
                            <Frame x:Name="frame" Height="Auto" HorizontalAlignment="Stretch" Width="Auto" VerticalAlignment="Stretch"/>
                        </TabItem>
                    </TabControl>
                </Grid>
                <GridSplitter Style="{StaticResource GridSplitterStyle}" Grid.Column="3"/>
                <Grid Grid.Column="4">
                    <TabControl Style="{StaticResource TabControlStyle}">
                        <TabItem Header="Properties">
                            <Frame x:Name="PropertiesFrame" Height="Auto" HorizontalAlignment="Stretch" Width="Auto" VerticalAlignment="Stretch"/>
                        </TabItem>
                        <TabItem Header="Window Options">
                            <ListView Background="Transparent" Initialized="ListView_Initialized" Foreground="{StaticResource SCB_DefaultTextColor}" BorderBrush="Transparent" BorderThickness="0">
                                <ListView.Resources>
                                    <Style TargetType="GridViewColumnHeader">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </Style>
                                </ListView.Resources>
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding Text}"/>
                                        <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding Object}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Grid>
            <Grid x:Name="StatusBar" x:FieldModifier="public" Grid.Row="1" Background="{StaticResource SCB_UIBlue}" Height="24">
                <TextBlock x:Name="StatusTextbox" x:FieldModifier="public" Foreground="{StaticResource SCB_DefaultTextColor}" Text="" VerticalAlignment="Center" Margin="8, 0, 0, 0"/>
                <!--<ComboBox x:Name="DisplaySizeComboBox" SelectedIndex="0" Width="90" HorizontalAlignment="Right">
                    <ComboBoxItem>
                        1920x1080
                    </ComboBoxItem>
                </ComboBox>-->
            </Grid>
        </Grid>
    </DockPanel>
</Window>
