        xmlns:local="clr-namespace:ArmA_UI_Editor"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" MinWidth="512" MinHeight="512" Width="1920" Background="{StaticResource SCB_UIBackground}" Closed="Window_Closed" Icon="/ArmA UI Editor;component/Logo.ico" WindowState="Maximized">
