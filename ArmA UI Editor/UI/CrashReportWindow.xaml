<Window x:Class="ArmA_UI_Editor.UI.CrashReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArmA_UI_Editor.UI"
        mc:Ignorable="d"
        Title="Crash happened" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Please describe in english what happened before you experienced the crash" TextWrapping="Wrap"/>
        <TextBox x:Name="textbox" Grid.Row="1" AcceptsReturn="True"/>
        <Button Grid.Row="2" Content="Report" Click="Button_Click"/>
    </Grid>
</Window>
