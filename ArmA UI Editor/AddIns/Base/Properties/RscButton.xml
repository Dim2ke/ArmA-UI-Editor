<root>
  <groups>
    <group name="Positioning">
      <properties>
        <property>
          <number conversion="ScreenX"/>
          <field>/x</field>
          <name>Pos X</name>
        </property>
        <property>
          <number conversion="ScreenY"/>
          <field>/y</field>
          <name>Pos Y</name>
        </property>
        <property>
          <number conversion="ScreenX"/>
          <field>/w</field>
          <name>Width</name>
        </property>
        <property>
          <number conversion="ScreenY"/>
          <field>/h</field>
          <name>Height</name>
        </property>
      </properties>
    </group>
    <group name="Coloring">
      <properties>
        <property>
          <array>
            <type>NUMBER</type>
            <count>4</count>
          </array>
          <field>/colorBackground</field>
          <name>Background Color</name>
        </property>
        <property>
          <array>
            <type>NUMBER</type>
            <count>4</count>
          </array>
          <field>/colorBackgroundDisabled</field>
          <name>Background Color, Disabled</name>
        </property>
        <property>
          <array>
            <type>NUMBER</type>
            <count>4</count>
          </array>
          <field>/colorBackgroundActive</field>
          <name>Background Color, Active</name>
        </property>
        <property>
          <array>
            <type>NUMBER</type>
            <count>4</count>
          </array>
          <field>/colorText</field>
          <name>Foreground Color</name>
        </property>
        <property>
          <array>
            <type>NUMBER</type>
            <count>4</count>
          </array>
          <field>/colorDisabled</field>
          <name>Foreground Color, Disabled</name>
        </property>
      </properties>
    </group>
    <group name="General">
      <properties>
        <property>
          <string/>
          <field>/text</field>
          <name>Text</name>
        </property>
        <property>
          <listbox>
            <items>
              <item display="TahomaB" value="TahomaB"/>
            </items>
          </listbox>
          <field>/font</field>
          <name>Font</name>
        </property>
        <property>
          <number/>
          <field>/sizeEx</field>
          <name>Font Size</name>
        </property>
      </properties>
    </group>
  </groups>
</root>