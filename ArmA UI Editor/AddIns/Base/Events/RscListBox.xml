<root>
  <event>
    <name>onLBListSelChanged</name>
    <field>/onLBListSelChanged</field>
    <description>Selection in XCombo box changed (but value is not stored yet).</description>
    <arguments>
      <arg index="0" type="CONTROL">Corresponding Control Element</arg>
      <arg index="1" type="SCALAR">Selected Element Index</arg>
    </arguments>
  </event>
  <event>
    <name>onLBDblClick</name>
    <field>/onLBDblClick</field>
    <description>Double click on some row in listbox.</description>
    <arguments>
      <arg index="0" type="CONTROL">Corresponding Control Element</arg>
      <arg index="1" type="SCALAR">Selected Element Index</arg>
    </arguments>
  </event>
  <event>
    <name>onLBDrag</name>
    <field>/onLBDrag</field>
    <description>Drag and drop operation started.</description>
    <arguments>
      <arg index="0" type="CONTROL">Corresponding Control Element</arg>
      <arg index="1" type="SCALAR">Selected Element Index</arg>
    </arguments>
  </event>
  <event>
    <name>onLBDragging</name>
    <field>/onLBDragging</field>
    <description>Drag and drop operation is in progress.</description>
    <arguments>
      <arg index="0" type="CONTROL">Corresponding Control Element</arg>
      <arg index="1" type="SCALAR">X Coordinate</arg>
      <arg index="2" type="SCALAR">Y Coordinate</arg>
    </arguments>
  </event>
</root>